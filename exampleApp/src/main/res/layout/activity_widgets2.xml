<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mercadolibre.android.ui.example.ui.widgets.WidgetsActivity">

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openButtonsActivity"
            android:text="Buttons" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openMLButtonsActivity"
            android:text="MLButtons" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openSnackbarsActivity"
            android:text="Snackbars" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openDialogActivity"
            android:text="Dialogs" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openSpinnerActivity"
            android:text="Spinner" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openContextualMenuActivity"
            android:text="Contextual Menu" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="openTextfieldWithLabelActivity"
            android:text="Textfield" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openProgressBarActivity"
            android:layout_marginBottom="10dp"
            android:text="Progress Bar" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openOtherWidgetsActivity"
            android:text="Other widgets" />

    </LinearLayout>

</ScrollView>
