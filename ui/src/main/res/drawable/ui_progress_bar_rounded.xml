<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/ui_progress_bar_radius"/>
            <solid android:color="@color/ui_components_progress_bar_background"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/ui_progress_bar_radius"/>
                <solid android:color="@color/ui_components_primary_color"/>
            </shape>
        </scale>
    </item>

</layer-list>
